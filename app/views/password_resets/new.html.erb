
<% provide(:title, "Password reset") %>
<h1>Password reset</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: password_resets_path) do |form_builder| %>
      <%= form_builder.label :email %>
      <%= form_builder.email_field :email, class: 'form-control' %>

      <%= form_builder.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
