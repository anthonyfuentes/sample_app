
<% provide(:title, 'Reset password') %>
<h1>Reset password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |form_builder| %>
      <%= render 'shared/error_messages' %>

      <%= hidden_field_tag :email, @user.email %>

      <%= form_builder.label :password %>
      <%= form_builder.password_field :password, class: 'form-control' %>

      <%= form_builder.label :password_confirmation, "Confirmation" %>
      <%= form_builder.password_field :password_confirmation, class: 'form-control' %>

      <%= form_builder.submit "Update password", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
