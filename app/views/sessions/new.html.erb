
<% provide(:title, 'Log in') %>
<h1>Login</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |form_builder| %>

      <%= form_builder.label :email %>
      <%= form_builder.email_field :email, class: 'form-control' %>

      <%= form_builder.label :password %>
      <%= link_to "forgot password?", new_password_reset_path %>
      <%= form_builder.password_field :password, class: 'form-control' %>

      <%= form_builder.label :remember_me, class: "checkbox inline" do %>
        <%= form_builder.check_box :remember_me %>
        <span>Remember me on this device</span>
      <% end %>

      <%= form_builder.submit "Login", class: "btn btn-primary" %>


    <% end %>

    <p>Visitor? <%= link_to "Join", signup_path %></p>
  </div>
</div>
